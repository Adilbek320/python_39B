define(["ko","uiComponent","Magento_Customer/js/customer-data"],function(ko,Component,customerData){"use strict";return Component.extend({defaults:{template:"Bounteous_Gam/gam-icon",},isReady:ko.observable(false),isLoggedIn:ko.observable(false),customerName:ko.observable(""),customerInitials:ko.observable(""),initialize:function(){var self=this;self._super();self.subscribe();},reloadCustomerData:function(){customerData.invalidate(["customer"]);return customerData.reload(["customer"],true);},subscribe:function(){var self=this,customer=customerData.get("customer");customer.subscribe(function(data){if(data.fullname){var names=data.fullname.split(" ");var initials=names[0].charAt(0);if(names.length>1){initials+=names[names.length-1].charAt(0);}
self.customerInitials(initials.toUpperCase());self.isLoggedIn(true);}else{self.isLoggedIn(false);}
self.isReady(true);},this);self.reloadCustomerData();},});});